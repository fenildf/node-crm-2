extends ../layout

block body
	h1 Customers
	.clear
		form(method="post")
			fieldset
				input(type="hidden", name="_method", value="put")
				legend= title
				.col
					input(type="text", name="customer[name]", value=customer.name, placeholder="Name", readonly)
					input(type="text", name="customer[email]", value=customer.email, placeholder="Email", readonly)
					input(type="text", name="customer[addresses][0][line1]", value=customer.addresses[0].line1, placeholder="Address line 1", readonly)
					input(type="text", name="customer[addresses][0][line2]", value=customer.addresses[0].line2, placeholder="Address line 2", readonly)
					input(type="text", name="customer[addresses][0][line3]", value=customer.addresses[0].line3, placeholder="Address line 3", readonly)
					input(type="text", name="customer[addresses][0][town]", value=customer.addresses[0].town, placeholder="Town", readonly)
					input(type="text", name="customer[addresses][0][county]", value=customer.addresses[0].county, placeholder="County", readonly)
					input(type="text", name="customer[addresses][0][postcode]", value=customer.addresses[0].postcode, placeholder="Postcode", readonly)
				.col
					input(type="text", name="customer[telephoneNumber]", value=customer.telephoneNumber, placeholder="Telephone Number", readonly)
					input(type="text", name="customer[contacts][0][title]", value=customer.contacts[0].title, placeholder="Title", readonly)
					input(type="text", name="customer[contacts][0][firstName]", value=customer.contacts[0].firstName, placeholder="First name", readonly)
					input(type="text", name="customer[contacts][0][lastName]", value=customer.contacts[0].lastName, placeholder="Last name", readonly)
					input(type="text", name="customer[contacts][0][email]", value=customer.contacts[0].email, placeholder="Email", readonly)
		include /partials/notes